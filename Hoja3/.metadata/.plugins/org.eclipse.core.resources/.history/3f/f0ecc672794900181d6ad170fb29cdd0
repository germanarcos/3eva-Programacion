
public class Comedor {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Ingrediente[] ingredientes = crearIngredientes();
		Plato plato = new Plato(ingredientes);
		System.out.println(plato.toString());
	}

	public static Ingrediente[] crearIngredientes(){
		Ingrediente[] ingredientes = new Ingrediente[10];
		String nombres[] = {"Croquetas","Pimientos","Mortadela","Champiñones","Ternera","Tortilla","Huevos","Mierda","Jamón","Espárragos","Patatas","Cebolla","Anís"};
		for(int i = 0;i<ingredientes.length;i++){
			ingredientes[i]=new Ingrediente(nombres[i]);
		}
		return ingredientes;
	}
}
