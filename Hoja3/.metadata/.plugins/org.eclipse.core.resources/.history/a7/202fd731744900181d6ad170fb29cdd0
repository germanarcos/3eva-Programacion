
public class Plato {
	Ingrediente[] ingredientes;
	String nombre;
	Integer precio;
	Plato(Ingrediente[] ingredientes) {
		this.ingredientes = ingredientes;
		nombreAleatorio();
	}

	private String nombreAleatorio() {
		int var = ingredientes.length;
		switch (var) {
		case 1:
			return ingredientes[1].toString();
		case 2:
			return ingredientes[1].toString() + " al " + ingredientes[2].toString();
		default:
		case 3:
			return ingredientes[1].toString() + " al " + ingredientes[2].toString() + " con "
					+ ingredientes[3].toString();
		case 0:
			return "Pieza de ceramica redonda.";
		}
	}
}
